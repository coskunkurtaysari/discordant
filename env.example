# Discordant Environment Configuration Example
# Copy this file to .env.local and update with your actual values

# HTTPS Development Configuration (for npm run dev:https)
HTTPS=true
SSL_CRT_FILE=./certs/localhost.pem
SSL_KEY_FILE=./certs/localhost-key.pem

# Development URLs
# For HTTP development: http://localhost:3000
# For HTTPS development: https://localhost:3000
NEXT_PUBLIC_SITE_URL=https://localhost:3000
NEXT_PUBLIC_APP_URL=https://localhost:3000
NEXT_PUBLIC_SOCKET_URL=https://localhost:3000

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here

# Database
DATABASE_URL=mysql://username:password@localhost:3306/discordant

# UploadThing (File Uploads)
UPLOADTHING_SECRET=sk_live_your_uploadthing_secret_here
UPLOADTHING_APP_ID=your_uploadthing_app_id_here

# n8n Integration
N8N_WEBHOOK_URL=https://n8n.kendev.co/webhook
NEXT_PUBLIC_N8N_WEBHOOK_URL=https://n8n.kendev.co/webhook
N8N_API_URL=https://n8n.kendev.co/api/v1
N8N_API_KEY=your_n8n_api_key_here

# LiveKit (Video/Audio)
LIVEKIT_API_KEY=your_livekit_api_key_here
LIVEKIT_API_SECRET=your_livekit_api_secret_here
NEXT_PUBLIC_LIVEKIT_URL=wss://your_livekit_url_here

# External Integration (Portfolio/Folio Integration)
DISCORDANT_API_TOKEN=disc_your_generated_api_token_here
DISCORDANT_BASE_URL=https://localhost:3000
NEXT_PUBLIC_DISCORDANT_URL=https://localhost:3000

# Optional: Custom Domain Mapping
# NEXT_PUBLIC_PORTFOLIO_DOMAIN=https://folio.kendev.co
# NEXT_PUBLIC_ALLOWED_ORIGINS=https://localhost:3000,https://folio.kendev.co

# Optional: Analytics and Monitoring
# VERCEL_ANALYTICS_ID=your_vercel_analytics_id
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_public_analytics_id 